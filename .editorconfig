root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{py,pyx}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.{json,js,yml,css,html}]
indent_style = space
indent_size = 2

[.eslintrc*]
indent_style = space
indent_size = 2
